.container {
    flex-direction: column;
    margin:0;
    padding:0;
    display: flex;
}
.margin-top10{
    margin-top:10px;
}
.top-wrapper-style{
    width:100%;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    background-color:#0398ff;
    height:70px;
}
.top-item-wrapper-style{
    display: flex;
    flex-direction: column;
    align-items: center;
}
.top-img-style{
    width: 30px;
    height: 30px;
}
.top-text-style{
    margin-top: 5px;
    font-size: 12;
    color: white;
}

.amount-wrapper-style{
    width:100%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    padding:10px;
}
.amount-desc-style{
    color: #666666;
    font-size: 12px;
    margin-left: 10px;
}
.amount-view-wrapper-style{
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-right: 10px;
}
.amount-style{
    font-size: 18px;
    color: #333333;
}
.amount-arrow-style{
    margin-left: 10px;
    height:12px;
    width: 12px;
}

.space-view-style{
    width: 100%;
    height: 10px;
    background-color: #e5e5e5;
}

.content-wrapper-style{
    width:100%;
    display: flex;
    flex-direction: row-wrap;
    justify-content: space-around;
}
.content-item-wrapper-style{
    display: flex;
    flex-direction: column;
    align-items: center;
    width:33%;
    background-color: #ccc;
    margin-left: 5px;
    margin-right: 5px;
}
.content-img-style{
    width: 40px;
    height: 40px;
}